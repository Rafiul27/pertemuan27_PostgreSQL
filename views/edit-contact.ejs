<div class="container mt-3">
    <div class="row">
        <div class="col-md-6">
            <h2>Form Ubah Data Contact</h2>


            <% if (typeof errors != 'undefined') { %>
              <div class="alert alert-danger" role="alert">
                <ul>
                  <% errors.forEach(error => { %>
                   <li><%= error.msg %></li>
                  <% }) %>
                </ul>
              </div>
             
            <% } %>
            <form method="post" action="/contact/update">
                <input type="hidden" name="oldNama" value="<%= contact.oldNama || contact.nama %>">
                <div class="mb-3">
                  <label for="nama" class="form-label">Nama</label>
                  <input type="text" class="form-control" id="nama" name="nama" required value="<%= contact.nama %>">
                </div>
                <div class="mb-3">
                  <label for="email" class="form-label">email</label>
                  <input type="text" class="form-control" id="email" name="email" required value="<%= contact.email %>">
                </div>
                <div class="mb-3">
                  <label for="mobile" class="form-label">No.Telepon</label>
                  <input type="text" class="form-control" id="mobile" name="mobile" required value="<%= contact.mobile %>">
                </div>
                <button type="submit" class="btn btn-primary">Ubah data contact</button><br><br>
                <a href="/contact" class="card-link">&laquo;Kembali ke Contact list</a>
              </form>
        </div>
    </div>
</div>